<main>
    <section class="cat-index-holder">
        <nav>
            <h1>All Cats</h1>
            <a href="<%= new_cat_url %>">
            Add Cat
            <i class="fa fa-plus" aria-hidden="true"></i>
            </a>
        </nav>
        <section class="cat-index">
            
                <% @cats.each do |cat| %>
                <div class="cat-index-item">
                    <div>
                        <%= image_tag cat.image_url || asset_path('default_cat.jpg'), alt: "#{cat.name} image", size: "200x200" %>
                        <br>
                        <a href="<%= cat_url(cat) %>"><%= "Rent " + cat.name %></a>
                    </div>
                </div>
                <% end %>
        </section>
    </section>
</main>
<footer>
    <% content_for :footer do %>
        <p>Cats Index</p>
    <% end %>
</footer>